<div class="flex justify-center items-start">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
      <div>
        <%= link_to "Back", articles_path, class: "bg-gray-700 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

    <h1 class="text-3xl font-bold text-center mb-6">New Article</h1>

    <%= form_with model: article, class: "space-y-4" do |form| %>
      <% if article.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Oops!</strong>
          <ul>
            <% article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :title, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :body, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_area :body, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.submit "Submit", class: "w-full bg-gray-700 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
